<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
id="service.tvshowdownloader"
version="0.0.1"
name="TV Show Downloader"
provider-name="wspi"
>
<requires>
<import addon="xbmc.python" version="2.1.0"/>
</requires>
<extension point="xbmc.python.script" library="manual.py">
   <provides>executable</provides>
</extension>
<extension point="xbmc.service" library="default.py" start="login">
   <provides>program</provides>
</extension>
<extension point="xbmc.addon.metadata">
<summary>Download TV Shows episodes</summary>
<summary lang="pt">Faça Download de novos episódios das séries que você assiste</summary>
<description>Download new episodes from tv shows in your library</description>
<description lang="pt">Faça Download de novos episódios das séries que você assiste</description>
<platform >all</platform>
</extension>
</addon>
